        </tr>
        {% endfor %}
        <form action="{{ path("villes_persist") }}" method="POST">
            <tr>
                <td><input name="nom" type="text" placeholder="Nouvelle ville~" required></td>
                <td><input name="codePostal" type="text" placeholder="Code Postal~" required></td>
